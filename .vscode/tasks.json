{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "MailHog",
      "type": "shell",
      "command": "mailhog",
      "group": "none",
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "Python Dev Tools Sync",
      "type": "shell",
      "command": "source ./activate_and_set_env.sh && cd packages/server && python manage.py runserver 0.0.0.0:8000",
      "group": "none",
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "Python Dev Tools Async",
      "type": "shell",
      "command": "source ./activate_and_set_env.sh && cd packages/server && uvicorn config.asgi:application --host 0.0.0.0 --reload --reload-include '*.html'",
      "group": "none",
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "Kill Server",
      "type": "shell",
      "command": "lsof -t -i tcp:8000 | xargs kill",
      "group": "none",
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "Client",
      "type": "shell",
      "command": "source ./activate_and_set_env.sh && cd packages/client && npm run start",
      "group": "none",
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "DevEnv",
      "dependsOn": ["Python Dev Tools Async", "MailHog", "Client"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always"
      }
    }
  ]
}
